---
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";
import "@fontsource/inter";
import "@fontsource/parisienne";
import Footer from "../components/Footer.astro";
const {
  title,
  description = "Moderner Aktivstall zwischen Peiting und Steingaden im Herzen des Pfaffenwinkels. Eine tolle Anlage für Mensch und Pferd.",
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, import.meta.env.PUBLIC_DOMAIN);
---

<!-- TODO: Twitter SEO usw., das OG zeugsl --><!DOCTYPE html>
<html class="bg-white-50" lang="de">
  <head>
    <meta charset="utf-8" />
    <SEO
      title={`${title} | Aktivstall Pfaffenwinkel – Dein Pferdestall in Oberbayern`}
      description={description}
      canonical={canonicalURL.href}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
        meta: [{ name: "viewport", content: "width=device-width, initial-scale=1" }],
      }}
    />
  </head>
  <body class="">
    <div class="menu-overlay hidden fixed top-0 w-full h-full bg-white-900/50 z-20"></div>
    <div class="mt-12">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
